{
  "compilerOptions": {
    "types": ["node","lodash","rxjs"],
    "typeRoots": [ "node_modules/@types"],
    "compileOnSave": true,
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "outDir": "dist",
    "allowUnreachableCode": true,
    "lib": ["es2015", "dom"]
  },
  "include": [
    "test/.suman/**/*",
    "./**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}